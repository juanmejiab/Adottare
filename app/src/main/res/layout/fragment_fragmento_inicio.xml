<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/informacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentoInicio">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-294dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Adottare"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/animales" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingHorizontal="20dp"
            android:text="Al adoptar un animal, no solo le estás dando un hogar amoroso y seguro, sino que también estás ayudando a que cada vez más hayan menos animales en las calles pasando hambre. Además, los animales adoptados suelen ser más agradecidos y leales."
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>